<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>

    <!-- Настройки сессии -->
    <session-factory>
        <!-- JDBC URL, драйвер и учетные данные для подключения к базе данных -->
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:mem:testdb;DB_CLOSE_DELAY=-1</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password"></property>

        <!-- Диалект базы данных (для H2) -->
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>

        <!-- Автоматическое создание и обновление схемы базы данных -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Параметры для вывода SQL-запросов -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Указываем классы сущностей -->
        <mapping class="org.example.model.Player"/>
        <mapping class="org.example.model.Match"/>
    </session-factory>

</hibernate-configuration>
